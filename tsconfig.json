{
    "compilerOptions": {
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "target": "ES2022",
        "module": "ES2022",
        "lib": ["ES2022", "DOM"],
        "moduleResolution": "Bundler",
        "allowJs": true,
        "checkJs": false,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "baseUrl": "./",
        "typeRoots": ["@girs", "lib/types/globals"],
        "skipLibCheck": true,
        "types": [],
        "experimentalDecorators": true,
        "jsx": "react-jsx",
        "jsxImportSource": "/usr/share/astal/gjs/gtk3",
        "paths": {
            "astal/*": ["/usr/share/astal/gjs/*"]
        }
    }
}
