{
    "compilerOptions": {
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "target": "ES2022",
        "module": "ES2022",
        "lib": ["ES2022", "DOM"],
        "moduleResolution": "Bundler",
        "allowJs": true,
        "checkJs": false,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "baseUrl": ".",
        "typeRoots": ["types", "src/lib/types"],
        "skipLibCheck": true,
        "types": [],
        "experimentalDecorators": true,
        "jsx": "react-jsx",
        "jsxImportSource": "astal/gtk3"
    }
}
